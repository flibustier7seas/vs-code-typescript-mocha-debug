{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",

        "lib": ["es6"],

        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build/",
        "sourceMap": true,
        // module resolution
        "baseUrl": "../src/",
        "paths": {
            "src/*": ["*"]
        },
        "moduleResolution": "node",
        "traceResolution": false,
        "forceConsistentCasingInFileNames": false

    },
    "exclude": [
        "node_modules"
    ]
}
