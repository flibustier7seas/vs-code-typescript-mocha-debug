{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Mocha Test (ts node)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--opts", "test/settings/mocha.ts-node.opts"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug Mocha Test (transpiled JavaScript file)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--opts", "test/settings/mocha.transpiled-code.opts"
            ],
            "address": "localhost",
            "port": 5858,
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/test/build/test/**/*.js"
            ]
        }
    ]
}
