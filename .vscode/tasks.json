{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build_test",
            "type": "shell",
            "command": "npm run tsc -- --project ./test --sourcemap",
            "group": "build"
        },
        {
            "type": "typescript",
            "label": "build_test_watch",
            "tsconfig": "test\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
