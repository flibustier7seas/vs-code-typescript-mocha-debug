{
    "compilerOptions": {
        "target": "es5",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build/",
        "sourceMap": true,
        // module resolution
        "baseUrl": "./src/",
        "moduleResolution": "node",
        "traceResolution": false,
        "forceConsistentCasingInFileNames": false,
        // module processing
        "module": "es2015"
    },
    "exclude": [
        "node_modules"
    ]
}